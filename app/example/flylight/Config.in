config AOS_APP_FLYLIGHT
    bool "Fly Light Application"
    select AOS_COMP_CLI if !AOS_BOARD_ESP8266
    select AOS_COMP_NETMGR
    select AOS_COMP_OTA
    select AOS_COMP_CJSON
    select AOS_COMP_LINKKIT_SDK_C
    select APP_FEATURE_LINKKIT
    select AOS_COMP_CJSON
    help
        flylight

if AOS_APP_FLYLIGHT
# Configurations for app flylight
choice
    prompt "Select Case"
    default FLYLIGHT_CONFIG_CASE_SOLO
    help
        select case to build

    config FLYLIGHT_CONFIG_CASE_SOLO
        bool "SOLO"
        help
            default case, build fly_light.c
endchoice

endif
